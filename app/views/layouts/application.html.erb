<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title><%= yield :title %></title>

    <%= csrf_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

      <!-- Custom fonts for this template-->
    <%= stylesheet_link_tag "fontawesome-free/css/all.min.css" %>

    <%= stylesheet_link_tag :googleapi, "https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"%>

    <!-- Custom styles for this template-->
    <%= stylesheet_link_tag "sb-admin-2.min" %>
  </head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%= render "inc/sb-admin/sidebar" %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

          <!-- Sidebar Toggle (Topbar) -->
          <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
            <i class="fa fa-bars"></i>
          </button>

          <!-- Topbar Search -->
          <%= render "inc/sb-admin/searchBar"%>

          <!-- Topbar Navbar -->
          <ul class="navbar-nav ml-auto">
            <!-- Nav Item - Alerts -->
            <li class="nav-item dropdown no-arrow mx-1">
              <%= render "inc/sb-admin/alert/alertIcon"%>
              <!-- Dropdown - Alerts -->
              <%= render "inc/sb-admin/alert/alertDropdown"%>
            </li>

            <!-- Nav Item - Messages -->
            <li class="nav-item dropdown no-arrow mx-1">
              <%= render "inc/sb-admin/message/messageIcon"%>
              <!-- Dropdown - Messages -->
              <%= render "inc/sb-admin/message/messageDropdown"%>
            </li>

            <%= render "inc/sb-admin/dividerVertical"%>

            <!-- Nav Item - User Information -->
            <li class="nav-item dropdown no-arrow">
                <%= render "inc/sb-admin/userOption"%>
            </li>
          </ul>
        </nav>
        <!-- End of Topbar -->



        <!-- Begin Page Content -->
        <div class="container-fluid">
          <%= yield %>
        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%= render "inc/sb-admin/footer"%>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <%= render "inc/sb-admin/logoutModal" %>

  <!-- Bootstrap core JavaScript-->
  <%= javascript_include_tag "jquery/jquery.min.js" %>
  <%= javascript_include_tag "bootstrap/bootstrap.bundle.min.js" %>


  <!-- Core plugin JavaScript-->
  <%= javascript_include_tag "jquery-easing/jquery.easing.min.js" %>

  <!-- Custom scripts for all pages-->
  <%= javascript_include_tag "sb-admin/sb-admin-2.min.js" %>

  <!-- Page level plugins -->
  <%= javascript_include_tag "sb-admin/chart.js/Chart.min.js" %>

  <!-- Page level custom scripts -->
  <%= javascript_include_tag "sb-admin/demo/chart-area-demo.js" %>
  <%= javascript_include_tag "sb-admin/demo/chart-pie-demo.js" %>

</body>

</html>