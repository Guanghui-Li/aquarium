<% provide(:title, "Index") %>

<p id="notice"><%= notice %></p>

<h1>Livestocks</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Image</th>
      <th scope="col">Color</th>
      <th scope="col">Species</th>
      <th scope="col">Purchase Date</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @livestocks.each do |livestock| %>
      <tr scope="row">
        <td><%= image_tag livestock.image_url, width: "100px", height: "100px" if livestock.image.present? %></td>
        <td><%= livestock.color.name %></td>
        <td><%= livestock.species.name %></td>
        <td><%= livestock.purchase_date %></td>
        <td><%= link_to 'Show', livestock %></td>
        <td><%= link_to 'Edit', edit_livestock_path(livestock) %></td>
        <td><%= link_to 'Destroy', livestock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Livestock', new_livestock_path %>
